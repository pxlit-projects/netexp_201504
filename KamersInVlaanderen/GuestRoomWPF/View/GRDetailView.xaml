<Window x:Class="KamersWPF.DetailsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KamersWPF"
        mc:Ignorable="d"
        Title="DetailsWindow" Height="300" Width="300">
    <Grid>
        <StackPanel Orientation="Horizontal">
            <StackPanel Orientation="Vertical">
                <TextBlock x:Name="textBlockGRName" HorizontalAlignment="Left" Margin="5" TextWrapping="Wrap" Text="{Binding Name}" />
                <TextBlock x:Name="textBlockGRStreet" HorizontalAlignment="Left" Margin="5" TextWrapping="Wrap" Text="guestroom street" />
                <TextBlock x:Name="textBlockGRCity" HorizontalAlignment="Left" Margin="5" TextWrapping="Wrap" Text="guestroom city" />
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
