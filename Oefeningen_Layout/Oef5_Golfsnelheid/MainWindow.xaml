<Window x:Class="Oef5_Golfsnelheid.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Oef5_Golfsnelheid"
        mc:Ignorable="d"
        Title="Bereken de golfsnelheid" Height="350" Width="525">
    <StackPanel Orientation="Horizontal">
        <StackPanel Orientation="Vertical">
            <StackPanel Orientation="Horizontal">
                <TextBlock Margin="3">Name:</TextBlock>
                <TextBox Width="250" Margin="3"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBlock Margin="3">Length:</TextBlock>
                <TextBox x:Name="lengthInput" Width="70" Margin="3"/>
                <TextBlock Margin="3">voet</TextBlock>
            </StackPanel>
            <Button Content="Bereken de Rompsnelheid" HorizontalAlignment="Center" Click="Button_Click" />
            <StackPanel Orientation="Horizontal">
                <TextBlock>Rompsnelheid:</TextBlock>
                <TextBlock x:Name="output" Width="150"/>
                <TextBlock>knopen</TextBlock>
            </StackPanel>
        </StackPanel>
        <Viewbox>
            <Image Source="sailboat.jpg"/>
        </Viewbox>
    </StackPanel>
</Window>
