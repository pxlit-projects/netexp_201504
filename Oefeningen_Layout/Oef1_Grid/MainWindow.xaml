            <RowDefinition />
            <RowDefinition Height="2*" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Button Grid.Row="0" Grid.Column="0" Content="Knop 1" />
        <Button Grid.Row="1" Grid.Column="1" Content="Knop 2" />
