<Window x:Class="GuestRoomWPF.GRStartView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GuestRoomWPF"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen" WindowStyle="None"
        Title="Guestrooms In Flanders" Height="150" Width="425"
        DataContext="{Binding Source={StaticResource mainViewModelLocator},  Path=GRStartViewModel}">
    <Grid>
        <StackPanel VerticalAlignment="Center">
            <TextBlock x:Name="textBlockTitle" HorizontalAlignment="Center" Margin="20" TextWrapping="Wrap" Text="Guestrooms in Flanders" FontSize="34" FontWeight="Bold" FontFamily="Vivaldi"/>
            <TextBlock x:Name="textBlock" HorizontalAlignment="Center" Margin="5" TextWrapping="Wrap" Text="Loading guestrooms..." />
        </StackPanel>
        
    </Grid>
</Window>
