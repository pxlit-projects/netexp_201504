<Window x:Class="GuestRoomWPF.GRStartView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:p="clr-namespace:GuestRoomWPF.Properties"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GuestRoomWPF"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen" WindowStyle="None"
        Title="{x:Static p:Resources.AppTitle}" Height="150" Width="425"
        DataContext="{Binding Source={StaticResource mainViewModelLocator},  Path=GRStartViewModel}">
    <Grid>
        <StackPanel VerticalAlignment="Center">
            <TextBlock x:Name="GRStartViewTextBlockTitle" HorizontalAlignment="Center" Margin="20" TextWrapping="Wrap" Text="{x:Static p:Resources.AppTitle}" FontSize="34" FontWeight="Bold" FontFamily="Vivaldi"/>
            <TextBlock x:Name="GRStartViewTextBlockLoading" HorizontalAlignment="Center" Margin="5" TextWrapping="Wrap" Text="{x:Static p:Resources.GRStartViewTextBlockLoading}" />
        </StackPanel>
        
    </Grid>
</Window>
